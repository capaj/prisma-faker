{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "suppressExcessPropertyErrors": false,
    "noFallthroughCasesInSwitch": true
  },
  "exclude": ["node_modules", "dist", "examples"]
}
